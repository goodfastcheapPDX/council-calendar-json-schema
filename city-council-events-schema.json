{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "City Council Events Response",
  "type": "object",
  "properties": {
    "events_found": {
      "type": "boolean",
      "description": "Whether any public events were found in the email"
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
          "start_time": {"type": ["string", "null"], "pattern": "^\\d{2}:\\d{2}$"},
          "end_time": {"type": ["string", "null"], "pattern": "^\\d{2}:\\d{2}$"},
          "location": {"type": "string"},
          "description": {"type": "string"},
          "councilor_name": {"type": "string"},
          "event_type": {"type": "string", "enum": ["meeting", "hearing", "town_hall", "forum", "office_hours", "other"]}
        },
        "required": ["title", "date", "location", "councilor_name", "event_type"]
      }
    },
    "reason": {
      "type": "string",
      "description": "Explanation when no events are found"
    }
  },
  "required": ["events_found"],
  "if": {
    "properties": {"events_found": {"const": true}}
  },
  "then": {
    "required": ["events"]
  },
  "else": {
    "required": ["reason"]
  }
}
